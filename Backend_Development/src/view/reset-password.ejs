<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      #root-body {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
          "Lucida Sans", Arial, sans-serif;
      }

      #container {
        width: 400px;
        height: fit-content;
        padding: 20px 0px;
        background-color: rgb(230, 230, 212);
        border-radius: 4px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        box-shadow: #ccc;
      }

      .input-box {
        width: 300px;
        padding: 12px 20px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
          "Lucida Sans", Arial, sans-serif;
      }

      #btn-reset-password {
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: 2px solid #4caf50; /* Green border */
        border-radius: 5px; /* Rounded corners */
        color: #fff; /* Text color */
        background-color: #4caf50; /* Green background color */
        transition: background-color 0.3s, color 0.3s;
      }

      /* Hover effect */
      #btn-reset-password:hover {
        background-color: #45a049; /* Darker green on hover */
        color: #fff; /* Text color on hover */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Box shadow on hover */
      }

      #heading {
        text-align: center;
        font-weight: 500;
      }

      .toggle-password {
        cursor: pointer;
        user-select: none;
        position: absolute;
        top: 16px;
        right: 6px;
      }

      .toggle-password2 {
        cursor: pointer;
        user-select: none;
        position: absolute;
        top: 16px;
        right: 6px;
      }

      .rentifai-logo {
        text-align: center;
        color: #023863;
        font-weight: 800;
      }

      #sub-rentifai {
        background-color: #a64ac9;
        color: white;
        padding: 2px 4px;
        border-radius: 4px;
        margin-left: 2px;
      }

      @media only screen and (max-width: 360px) {
        #container {
          width: 100%;
        }

        .input-box {
          width: 250px;
          padding: 10px;
        }
      }
    </style>
  </head>
  <body id="root-body">
    <div id="container">
      <h2 class="rentifai-logo">RENTIF<span id="sub-rentifai">AI</span></h2>
      <p id="heading">Reset Password for "<%= email %>"</p>
      <div style="position: relative">
        <input
          id="first-password"
          type="password"
          class="input-box"
          placeholder="Enter a new Password"
        />
        <span class="toggle-password" id="eyeButton" onclick="togglePassword()"
          >üëÅÔ∏è</span
        >
      </div>

      <div style="position: relative">
        <input
          id="repeat-password"
          type="password"
          class="input-box"
          placeholder="Repeat the Password"
        />
        <span
          class="toggle-password2"
          id="eyeButtonOfRepeatPassword"
          onclick="toggleRepeatPassword()"
          >üëÅÔ∏è</span
        >
      </div>
      <button
        onclick="checkPassword()"
        id="btn-reset-password"
        type="submit"
        value="reset password"
      >
        Reset Password
      </button>
    </div>
    <p
      id="error-message"
      style="color: red; font-weight: 600; text-align: center"
    ></p>
    <p
      id="success_message"
      style="
        color: rgb(6, 190, 34);
        text-align: center;
        font-weight: 600;
        font-size: 20px;
      "
    ></p>
  </body>
  <script>
    function togglePassword() {
      let passwordField = document.getElementById("first-password");
      let eyeButton = document.getElementById("eyeButton");

      if (passwordField.type === "password") {
        passwordField.type = "text";
        eyeButton.textContent = "üëÅÔ∏è"; // Unicode eye icon
      } else {
        passwordField.type = "password";
        eyeButton.textContent = "üîí"; // Unicode lock icon
      }
    }

    function toggleRepeatPassword() {
      let passwordField = document.getElementById("repeat-password");
      let eyeButton = document.getElementById("eyeButtonOfRepeatPassword");

      if (passwordField.type === "password") {
        passwordField.type = "text";
        eyeButton.textContent = "üëÅÔ∏è"; // Unicode eye icon
      } else {
        passwordField.type = "password";
        eyeButton.textContent = "üîí"; // Unicode lock icon
      }
    }

    async function checkPassword() {
      let email = "<%-email%>";
      let role = "<%-role%>";
      console.log(role);
      const password = document.getElementById("first-password").value;
      const repeat_password = document.getElementById("repeat-password").value;
      const error_message = document.getElementById("error-message");
      if (password === "" || repeat_password === "") {
        error_message.innerHTML = "Please enter both the passwords.";
        return;
      }
      if (password.length < 8) {
        error_message.innerHTML = "Password must be atleast of 8 characters.";
        return;
      }
      if (password !== repeat_password) {
        error_message.innerHTML = "Password and repeat password didn't match.";
        return;
      }
      error_message.innerHTML = "";

      try {
        // Requesting the server
        const BACKEND_URL = "<%= process.env.BACKEND_DEV_URL %>";
        // console.log(BACKEND_URL);
        // console.log(BACKEND_URL.trim());
        await fetch(`${BACKEND_URL}/rentifai/auth/reset-password`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            email: email,
            password: password,
          }),
        }).then((res) => {
          if (res.status === 200) {
            success_message.innerHTML = "Password updated successfully.";

            // Redirect to the React dashboard
            const FRONTEND_URL = "<%= process.env.FRONTEND_DEV_URL %>";

            if (role === "owner") {
              window.location.href = `${FRONTEND_URL}/owner-list`;
              return;
            }

            if (role === "user") {
              window.location.href = `${FRONTEND_URL}/user-rent/home`;
              return;
            }
          } else {
            error_message.innerHTML =
              "Error while updating the password please try again.";
            return;
          }
        });
      } catch (error) {
        console.log(error);
      }
    }
  </script>
</html>
